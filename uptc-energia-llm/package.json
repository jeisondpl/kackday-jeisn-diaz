{
  "name": "uptc-energia-llm",
  "version": "1.0.0",
  "description": "Sistema inteligente de domótica y análisis energético para UPTC con IA",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "node --import tsx scripts/migrate.ts",
    "db:seed": "node --import tsx scripts/seed.ts",
    "db:reset": "node --import tsx scripts/reset.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "energy",
    "llm",
    "ai",
    "analytics",
    "rag",
    "domotic",
    "uptc"
  ],
  "author": "UPTC",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@langchain/core": "^0.3.23",
    "@langchain/openai": "^0.3.12",
    "@langchain/community": "^0.3.15",
    "chromadb": "^1.9.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "langchain": "^0.3.5",
    "node-cron": "^3.0.3",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "pg": "^8.11.3",
    "pgvector": "^0.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
