# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# UPTC Energy API
ENERGY_API_BASE_URL=http://localhost:3000
ENERGY_API_TIMEOUT=30000

# Database (puede ser la misma instancia de uptc-energia-api)
DATABASE_URL=postgresql://uptc_admin:uptc_password@localhost:5432/uptc_energia
DATABASE_SCHEMA=uptc_llm
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# LLM Configuration (OpenAI-compatible endpoint)
# Para LM Studio: http://localhost:1234/v1
# Para Ollama: http://localhost:11434/v1
# Para OpenAI: https://api.openai.com/v1
LLM_BASE_URL=http://localhost:1234/v1
LLM_API_KEY=lm-studio
LLM_MODEL=local-model
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048

# Embeddings Configuration
EMBEDDINGS_MODEL=nomic-embed-text
EMBEDDINGS_DIMENSIONS=768

# Vector Store
VECTOR_STORE_TYPE=pgvector
# Si usas Chroma en lugar de pgvector:
# VECTOR_STORE_TYPE=chroma
# CHROMA_URL=http://localhost:8000

# RAG Configuration
RAG_TOP_K=5
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MIN_SIMILARITY=0.7

# Scheduling (cron expressions)
CRON_INGEST=*/15 * * * *
CRON_EVAL=*/5 * * * *
CRON_REINDEX=0 2 * * *
CRON_BASELINE=0 3 * * *

# Rules Engine
ENABLE_RULES_ENGINE=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_FORECASTING=true

# Alerts
ALERT_RETENTION_DAYS=90
ALERT_DEDUP_WINDOW_MINUTES=60

# Analytics
BASELINE_LOOKBACK_DAYS=30
ANOMALY_ZSCORE_THRESHOLD=3.0
FORECAST_HORIZON_HOURS=24
